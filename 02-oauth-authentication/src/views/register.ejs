<!-- src/views/register.ejs -->
<%- include('partials/header') %>
<h2>Register</h2>
<form action="/auth/register" method="POST">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name" value="<%= typeof name != 'undefined' ? name : '' %>" required>
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="email" name="email" id="email" value="<%= typeof email != 'undefined' ? email : '' %>" required>
  </div>
  <div class="form-group">
    <label for="password">Password:</label>
    <input type="password" name="password" id="password" required>
  </div>
  <div class="form-group">
    <label for="password2">Confirm Password:</label>
    <input type="password" name="password2" id="password2" required>
  </div>
  <button type="submit">Register</button>
</form>
<p>Or register with:</p>
<div class="social-login">
  <a href="/auth/google" class="btn google">Google</a>
  <a href="/auth/facebook" class="btn facebook">Facebook</a>
  <a href="/auth/apple" class="btn apple">Apple</a>
</div>
<p>Already have an account? <a href="/auth/login">Login</a></p>
<%- include('partials/footer') %>
